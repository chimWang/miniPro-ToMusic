/* pages/myMusic/myMusic.wxss */
page{
  height: 100%;
  width: auto;
}
.back{
  position: absolute;
  left: 20rpx;
  top: 50rpx;
}
.back image{
  width: 50rpx;
  height: 50rpx;
}
image{
  width: 40px;
  height: 40px;
}
.container{
  color: #fff;
  position: relative;
}
.background{
  z-index: -1;
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  left: 0;
  bottom:0;
  filter: brightness(20%);
}
.background image{
  width: 100%;
  height: 100%;
}
.main{
  position: fixed;
  left: 0;
  right: 0;
}
.music-scroll{
  width: 100%;
  overflow: hidden;
}
.my-music{
  display: inline-block;
  position: relative;
  width: 600rpx;
  height: 900rpx;
  margin-left: 40rpx;
}
.my-music .text{
  text-align: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.mask{
  z-index: -1;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  filter: brightness(60%);
}
.mask image{
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
.my-music .controls {
  width: 60px;
  margin: 0 auto;
  border: 2px solid #fff;
  padding: 5px 10px 5px 10px;
}
.create-music{
  position: absolute;
  bottom:60rpx;
}