/* pages/myMusic/myMusic.wxss */
page{
  height: 100%;
}
.back{
  position: absolute;
  left: 20rpx;
  top: 50rpx;
}
.back image{
  width: 50rpx;
  height: 50rpx;
}
image{
  width: 40px;
  height: 40px;
}
.container{
  color: #fff;
  position: relative;
}
.background{
  z-index: -1;
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  left: 0;
  bottom:0;
  filter: brightness(17%);
}
.background image{
  width: 100%;
  height: 100%;
}
.main{
  width: 100%;
  height: 900rpx;
}
.my-music{
  position: relative;
  width: 100%;
  height: 100%;
}
.outter{
  position: absolute;
  width: 80%;
  height: 80%;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.my-music .text{
  text-align: center;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.my-music image{
  border-radius: 5px;
  width: 100%;
  height: 100%;
}
.mask{
  z-index: -1;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  filter: brightness(60%);
}
.mask image{
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
.my-music .controls {
  width: 60px;
  margin: 0 auto;
  border: 2px solid #fff;
  padding: 5px 10px 5px 10px;
}
.create-music{
  position: absolute;
  bottom:60rpx;
}
.selected{
  width: 85%;
  height: 85%;
}