page{
  height: 100%;
}
text{
  font-size: larger;
}
.container{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  color: #fff;
  position: relative;
}
.background{
  z-index: -1;
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  left: 0;
  filter: brightness(60%);
}
.background image{
  width: 100%;
  height: 100%;
}

.player{
  display: flex;
  justify-content: space-around;
  width:85%;
}
.player image{
  background-color: #fff;
  border: 1px solid #fff;
  border-radius: 50%;
  padding: 20rpx;
  width: 70rpx;
  height: 70rpx;
}
.musicProgress{
  position: absolute;
  bottom:0;
  width: 100%;
  background: #fff;
  height: 100rpx;
}
.musicProgress view{
  position: absolute;
  top: 50%;
  height: 2px;
  background-color: #000;
}
.musicProgress .musicBg{
  width: 100%;
  background-color: #ccc;
}
.musicProgress .musicBtn{
  position: absolute;
  top: -5px;
  right: -12px;
  width: 10px;
  height: 10px;
  border: 1px solid #000;
  background-color: #000;
  border-radius: 50%;
}

.title{
  display: flex;
}
.title image{
  width: 30px;
  height: 30px;
  margin-right: 5px;
}