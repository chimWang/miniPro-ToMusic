/**index.wxss**/
page{
  height: 100%;
}
text{
  display: block;
}
.container{
  color: #fff;
  position: relative;
}
.mask{
  z-index: -1;
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  left: 0;
  filter:brightness(60%) blur(1px);
}
.mask image{
  width: 100%;
  height: 100%;
}
.main{
  font-size: smaller;
  width: 85%;
  justify-content: space-around;
  display: flex;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}
.main image{
  border: 2px solid #fff;
  border-radius: 50%;
  padding: 20rpx;
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10px;
}
.zerotop{
  position: absolute;
  bottom:30rpx;
}                                  
